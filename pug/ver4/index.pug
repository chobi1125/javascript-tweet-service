-
  const ttl = "Twitter Share"
  const textareaText = [
    "ツイート内容をここに記載！&#13;&#10;作成を押すとツイートボタンが表示されます◎&#13;&#10;&#13;&#10;※1行スペースを作りたい場合※&#13;&#10;改行した後に\\nを記載すると作成できます(仮)。",
    "ツイートする内容は、&#13;&#10;ここで確認できるよ！"
  ]
  const freeTag = "好きなハッシュタグを追加"
  const pupularTag = [
    "駆け出しエンジニアと繋がりたい",
    "プログラミング初心者",
    "プログラミング"
  ]
  const cheerText ="Posted by:https://chobimusic.com/tweet @masaru_pg"

doctype
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,initial-scale=1.0")
    title #{ttl}
    link(rel="stylesheet" href="style.css")
  body
    header
      h1 #{ttl}
    main
      div: textarea#input(type="text" name="input" placeholder!=textareaText[0])
      div
        input#freeTag(type="text" placeholder=freeTag)
        button#freeTagBtn(type="button") 追加
      - for (let n = 0; n < 3; n++)
        div
          input(id="pupularTag"+n type="text" value=pupularTag[n] readonly)
          button(id="pupularTagBtn"+n type="button") 追加
      div
        input#cheerText(type="text" value=cheerText readonly)
        button#cheerBtn(type="button") 応援
      div: button#btn 作成
      div: textarea#check(type="text" placeholder!=textareaText[1] readonly)
      button#button.display-none: a#tweet(target="_blank") ツイート
    script(src="index.js")